---
export interface Props {
  title?: string;
  eyebrow?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
}
const { title = "Spotlight", eyebrow, description, ctaText = "Learn more", ctaHref = "#" } = Astro.props as Props;
---

<article class="rounded-2xl bg-white dark:bg-zinc-900 shadow-md p-6 max-w-md mx-auto">
  <header class="flex items-center gap-4">
    <div class="flex-shrink-0 w-14 h-14 rounded-full bg-gradient-to-br from-riptide-400 to-mint-400 flex items-center justify-center">
      <slot name="icon">
        <svg class="w-7 h-7 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3-1.343-3-3S10.343 2 12 2s3 1.343 3 3-1.343 3-3 3zM6 20a6 6 0 0112 0" />
        </svg>
      </slot>
    </div>
    <div class="flex-1">
      {eyebrow ? <p class="text-xs text-mint-600 font-semibold">{eyebrow}</p> : null}
      <h3 class="text-lg font-bold text-blacktext dark:text-white">{title}</h3>
    </div>
  </header>

  {description ? (
    <p class="mt-4 text-sm text-gray-700 dark:text-gray-300">{description}</p>
  ) : null}

  <div class="mt-6 flex items-center justify-between gap-4">
    <a href={ctaHref} class="inline-flex items-center gap-2 rounded-md bg-mint-500 text-white px-4 py-2 text-sm font-semibold hover:opacity-95">{ctaText}</a>
    <slot name="meta" />
  </div>
</article>
