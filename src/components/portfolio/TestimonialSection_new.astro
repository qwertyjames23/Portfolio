---
import Testimonial from "../ui/Testimonial.astro";
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";
import { getAssetPath } from "../../utils/assets";

// Sample testimonial data
const testimonials = [
  {
    name: "Sarah Johnson",
    role: "Marketing Manager",
    company: "TechCorp",
    message: "Working with Raffy was an absolute pleasure. His attention to detail in graphic design and administrative support helped streamline our entire marketing campaign. Highly professional and creative!",
    image: getAssetPath("/images/sarahjohnson.jpg")
  },
  {
    name: "Mike Chen",
    role: "Podcast Producer",
    company: "Audio Waves Studio",
    message: "RJ's audio expertise is outstanding. He transformed our raw recordings into polished, professional content that our listeners love. The technical quality and creative input exceeded our expectations.",
    image: getAssetPath("/images/mikechan.jpg")
  },
  {
    name: "Emily Rodriguez",
    role: "CEO",
    company: "StartupHub",
    message: "Raffy's administrative support has been invaluable to our growing company. His organizational skills and proactive approach helped us maintain efficiency while scaling up. I couldn't recommend him more!",
    image: getAssetPath("/images/emilyrodriquez.jpg")
  }
];
---

<section class="py-20 px-8 max-sm:px-4 bg-gray-50 dark:bg-zinc-900/50" id="testimonials">
  <div class="mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="flex gap-4 items-center justify-center text-center mb-12">
      <div class="flex-grow border-t border-riptide-400"></div>
      <Heading
        size="h2"
        title="Client Testimonials"
        subtitle="Here's what my clients say about working with me across my three specialties: Graphic Design, Audio Production, and Administrative Support."
      />
      <div class="flex-grow border-t border-riptide-400"></div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <Testimonial
          name={testimonial.name}
          role={testimonial.role}
          company={testimonial.company}
          message={testimonial.message}
          image={testimonial.image}
        />
      ))}
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
        Ready to work together? Let's create something amazing!
      </p>
      <a
        href="#contact"
        class="inline-flex items-center gap-2 px-6 py-3 bg-riptide-500 hover:bg-riptide-600 dark:bg-mint-400 dark:hover:bg-mint-500 text-white dark:text-black font-semibold rounded-lg transition-colors"
      >
        <Icon name="paperplane" class="w-4 h-4" />
        Get In Touch
      </a>
    </div>
  </div>
</section>
