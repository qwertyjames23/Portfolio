---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/portfolio/Experience.astro";
import HeroIndex from "../components/portfolio/HeroIndex.astro";
import Contact from "../components/portfolio/Contact.astro";
import ListProjects from "../components/portfolio/ListProjects.astro";
import TestimonialSection from "../components/portfolio/TestimonialSection.astro";
import ToolsSection from "../components/portfolio/ToolsSection.astro";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const { OGImage } = staticData.data;

// SEO optimized content
const pageTitle = "Raffy James Adams - Professional Portfolio | Graphic Designer | Audio Specialist | Administrative Support";
const pageDescription = "Welcome to the professional portfolio of Raffy James Adams (RJADAMS). Expert Graphic Designer, Audio Specialist, and Administrative Support professional from the Philippines. Explore my creative work, technical skills, and successful client projects. Available for freelance and contract work.";
const keywords = "Raffy James Adams, RJADAMS, Graphic Designer Philippines, Audio Specialist, Administrative Support, Freelancer, Portfolio, Logo Design, Podcast Editing, Virtual Assistant, Creative Professional";
---

<Layout
  pageTitle={pageTitle}
  description={pageDescription}
  keywords={keywords}
  ogimage={{ alt: "Raffy James Adams Professional Portfolio", url: OGImage.url }}
>
  <HeroIndex />
  <Experience />
  <ListProjects />
  <TestimonialSection />
  <ToolsSection />
  <Contact />
</Layout>
